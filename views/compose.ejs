<%- include("partials/header") %> 
<h1>Compose new</h1>

<form action="/compose" method="post" >

    <div class="form-group">
    <label class="form-label"><h3>Title</h3></label>
    <input type="text" placeholder="What's on your mind??" name="title" class="form-control" id="exampleFormControlInput1"> 
    </div>
    <label  class="form-label"><h3>Post here</h3></label> 
    <div class="form-group">
    <textarea class="form-control"  rows="3" placeholder="Detailed thoughts..." name="publish"></textarea> 
    </div>
    <div class="form-group">
    <button type="submit" name="send" class="btn btn-primary">Publish</button>
    </div>
    
</form>

